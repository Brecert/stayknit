    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "npm-run-all": "^4.1.5",
    "servor": "^3.2.0",
    "snowpack": "^1.6.0",
    "sort-package-json": "^1.41.0",
    "typescript": "^3.8.3"
  }
