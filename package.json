{
  "name": "stayknit",
  "version": "1.0.0",
  "description": "Hot reload this",
  "keywords": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@stayknit.ca:stayknit.git"
  },
  "author": "Gen Hames",
  "main": "src/index.tsx",
  "scripts": {
    "build:ts": "babel src --out-dir serve --extensions \".tsx\" --source-maps",
    "build:static": "mkdir -p serve && cp -r ./static/* ./web_modules serve/",
    "tailwind": "tailwindcss build src/styles.css --output static/tailwind.css",
    "snowpack": "mkdir -p web_modules && snowpack --include 'src/**/*.tsx'",
    "setup": "run-s snowpack build tailwind",
    "build": "run-p build:*",
    "serve": "servor ./serve --reload",
    "start": "run-p \"build:ts -- --watch\" serve"
  },
  "dependencies": {
    "sinuous": "file:sinuous/packages/sinuous",
    "tailwindcss": "^1.4.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/plugin-transform-typescript": "^7.9.6",
    "@snowpack/babel-plugin-package-import": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "eslint": "^7.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-react": "^7.20.0",
    "npm-run-all": "^4.1.5",
    "servor": "^4.0.2",
    "snowpack": "^2.3.1",
    "typescript": "^3.9.3"
  }
}
